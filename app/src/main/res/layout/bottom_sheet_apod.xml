<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/bottom_sheet_container"
	style="@style/Apod_BottomSheet_Container"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	app:behavior_hideable="false"
	app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
	
	<View
		android:id="@+id/bottom_sheet_line"
		style="@style/Apod_BottomSheet_Line"
		android:layout_gravity="center" />
	
	<TextView
		android:id="@+id/bottom_sheet_description_header"
		style="@style/Apod_BottomSheet_Header"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		tools:text="Two Clusters and a Comet" />
	
	<TextView
		android:id="@+id/bottom_sheet_explanation"
		style="@style/Apod_BottomSheet_Explanation"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:text="This lovely starfield spans some four full moons. This lovely starfield spans some four full moons. This lovely starfield spans some four full moons. This lovely starfield spans some four full moons. This lovely starfield spans some four full moons." />

</LinearLayout>

