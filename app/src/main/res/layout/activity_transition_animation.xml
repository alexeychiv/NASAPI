<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		
		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			
			<com.google.android.material.chip.Chip
				android:id="@+id/chip_object_animator_fade"
				style="@style/Widget.MaterialComponents.Chip.Choice"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:checked="true"
				android:text="fade transition"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />
			
			<LinearLayout
				android:id="@+id/linear_layout_transition_fade"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:background="@color/red_200"
				android:orientation="horizontal"
				app:layout_constraintBottom_toBottomOf="@id/chip_object_animator_fade"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@id/chip_object_animator_fade"
				app:layout_constraintTop_toTopOf="@id/chip_object_animator_fade" />
		
		</androidx.constraintlayout.widget.ConstraintLayout>
		
		
		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin_average">
			
			<com.google.android.material.chip.Chip
				android:id="@+id/chip_transition_slide"
				style="@style/Widget.MaterialComponents.Chip.Choice"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:checked="true"
				android:text="slide transition"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />
			
			<LinearLayout
				android:id="@+id/linear_layout_transition_slide"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:background="@color/red_200"
				android:orientation="horizontal"
				app:layout_constraintBottom_toBottomOf="@id/chip_transition_slide"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@id/chip_transition_slide"
				app:layout_constraintTop_toTopOf="@id/chip_transition_slide" />
		
		</androidx.constraintlayout.widget.ConstraintLayout>
		
		<Button
			android:id="@+id/btn_return_exploded"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="return exploded" />
		
		<GridLayout
			android:id="@+id/grid_layout_transition_explode"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/margin_average"
			android:background="@color/red_200"
			android:columnCount="3"
			android:minWidth="210dp"
			android:minHeight="140dp">
			
			<View
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="@dimen/margin_large"
				android:background="@color/green_200" />
			
			<View
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="@dimen/margin_large"
				android:background="@color/green_200" />
			
			<View
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="@dimen/margin_large"
				android:background="@color/green_200" />
			
			<View
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="@dimen/margin_large"
				android:background="@color/green_200" />
			
			<View
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="@dimen/margin_large"
				android:background="@color/green_200" />
			
			<View
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="@dimen/margin_large"
				android:background="@color/green_200" />
		
		</GridLayout>
		
		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin_average">
			
			<com.google.android.material.chip.Chip
				android:id="@+id/chip_transition_size"
				style="@style/Widget.MaterialComponents.Chip.Choice"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:checked="true"
				android:text="slide transition"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />
			
			<FrameLayout
				android:id="@+id/frame_layout_transition_size"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:background="@color/red_200"
				app:layout_constraintBottom_toBottomOf="@id/chip_transition_size"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@id/chip_transition_size"
				app:layout_constraintTop_toTopOf="@id/chip_transition_size" />
		
		</androidx.constraintlayout.widget.ConstraintLayout>
		
		<com.google.android.material.chip.Chip
			android:id="@+id/chip_transition_move"
			style="@style/Widget.MaterialComponents.Chip.Choice"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:checked="true"
			android:text="move transition" />
		
		<FrameLayout
			android:id="@+id/frame_layout_transition_move"
			android:layout_width="match_parent"
			android:layout_height="200dp"
			android:background="@color/red_200"
			android:orientation="horizontal">
			
			<View
				android:id="@+id/view_transition_rotate"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_gravity="start|top"
				android:layout_margin="@dimen/margin_small"
				android:background="@color/green_200" />
		
		</FrameLayout>
		
		
		<Button
			android:id="@+id/btn_transition_shuffle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="SHUFFLE" />
		
		<LinearLayout
			android:id="@+id/Linear_layout_transition_shuffle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:orientation="vertical" />
	
	</LinearLayout>

</ScrollView>