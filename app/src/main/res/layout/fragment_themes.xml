<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_margin="@dimen/margin_average"
	android:orientation="vertical">
	
	<com.google.android.material.textview.MaterialTextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:text="Pick Theme"
		android:textSize="@dimen/textSize_header"
		android:textStyle="bold" />
	
	<com.google.android.material.chip.ChipGroup
		android:id="@+id/chipGroup_themes"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/margin_average"
		android:paddingHorizontal="@dimen/padding_huge"
		app:selectionRequired="true"
		app:singleSelection="true">
		
		<com.google.android.material.chip.Chip
			android:id="@+id/chip_theme_purple"
			style="@style/Widget.MaterialComponents.Chip.Choice"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/purple_theme"
			android:textAlignment="center" />
		
		<com.google.android.material.chip.Chip
			android:id="@+id/chip_theme_red"
			style="@style/Widget.MaterialComponents.Chip.Choice"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/red_theme"
			android:textAlignment="center" />
	
	
	</com.google.android.material.chip.ChipGroup>

</LinearLayout>