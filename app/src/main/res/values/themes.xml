<resources xmlns:tools="http://schemas.android.com/tools">
	
	<style name="Theme.NASAPI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<item name="android:forceDarkAllowed">true</item>
	</style>
	
	<!--<style name="Theme.NASAPI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<item name="android:forceDarkAllowed">true</item>
	</style>-->
	
	<style name="Theme.NASAPI.Font" parent="Theme.NASAPI">
		<item name="fontFamily">@font/courier</item>
	</style>
	
	
	<!-- Base application theme. -->
	<style name="Theme.NASAPI.Purple" parent="Theme.NASAPI.Font">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/purple_500</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>
		<item name="colorOnPrimary">@color/gray_light</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/teal_200</item>
		<item name="colorSecondaryVariant">@color/teal_700</item>
		<item name="colorOnSecondary">@color/gray_dark</item>
		
		<item name="colorSurface">@color/gray_light</item>
		
		<item name="colorAccent">@color/teal_200</item>
		
		
		<item name="android:textColorTertiary">@color/gray</item>
		<item name="android:textColorTertiaryInverse">@color/black</item>
		
		<item name="colorControlNormal">@color/white</item>
		
		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
	</style>
	
	
	<style name="Theme.NASAPI.Red" parent="Theme.NASAPI.Purple">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/red_500</item>
		<item name="colorPrimaryVariant">@color/red_700</item>
		<item name="colorOnPrimary">@color/gray_light</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/green_200</item>
		<item name="colorSecondaryVariant">@color/green_700</item>
		<item name="colorOnSecondary">@color/gray_dark</item>
		
		<item name="colorAccent">@color/green_200</item>
	
	</style>
	
	
	
	

</resources>